doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title #{ t('course.detail.meetingRoom') }
    link(rel='icon', href='/favicon.ico?v=2')
    link(
      rel='stylesheet',
      href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css'
    )
    
    style.
      :root {
        --primary-color: #4285f4;
        --danger-color: #ea4335;
        --background-dark: #ffffff;
        --background-light: #f5f5f5;
        --text-light: #202124;
        --text-dark: #5f6368;
        --control-bg: rgba(241, 243, 244, 0.9);
        --sidebar-width: 260px;
        --shadow-color: rgba(0, 0, 0, 0.1);
      }

      body {
        margin: 0;
        padding: 0;
        font-family: 'Google Sans', Arial, sans-serif;
        background: var(--background-dark);
        color: var(--text-light);
        overflow: hidden;
      }

      .meeting-container {
        display: flex;
        height: 100vh;
        position: relative;
      }

      .main-container {
        flex: 1;
        display: flex;
        flex-direction: column;
        transition: margin-right 0.3s ease;
      }

      .main-screen {
        flex: 1;
        background: var(--background-dark);
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
      }

      #main-video {
        max-width: 100%;
        max-height: calc(100vh - 80px);
        object-fit: contain;
        border-radius: 8px;
        box-shadow: 0 4px 12px var(--shadow-color);
      }

      .call-controls {
        position: fixed;
        bottom: 20px;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        gap: 12px;
        padding: 12px 24px;
        background: var(--control-bg);
        border-radius: 32px;
        box-shadow: 0 4px 15px var(--shadow-color);
        backdrop-filter: blur(10px);
      }

      .control-button {
        width: 44px;
        height: 44px;
        border-radius: 50%;
        border: none;
        background: rgba(95, 99, 104, 0.1);
        color: var(--text-light);
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s ease;
      }

      .control-button:hover {
        background: rgba(95, 99, 104, 0.2);
      }

      .control-button.danger {
        background: var(--danger-color);
        color: white;
      }

      .control-button.danger:hover {
        background: #d93025;
      }

      .control-button.muted,
      .control-button.camera-off {
        background: var(--danger-color);
        color: white;
      }

      .control-button.sharing {
        background: var(--primary-color);
        color: white;
      }

      #video-grid {
        position: fixed;
        right: 0;
        top: 0;
        width: var(--sidebar-width);
        height: 100vh;
        overflow-y: auto;
        transition: transform 0.3s ease;
      }

      #video-grid.collapsed {
        transform: translateX(var(--sidebar-width));
      }

      #video-grid video {
        width: 100%;
        height: 150px;
        object-fit: cover;
        border-radius: 8px;
        margin-bottom: 8px;
        cursor: pointer;
        box-shadow: 0 2px 8px var(--shadow-color);
      }

      .toggle-sidebar {
        position: fixed;
        right: var(--sidebar-width);
        top: 20px;
        background: #fff;
        border: none;
        color: var(--text-dark);
        padding: 8px;
        border-radius: 50%;
        cursor: pointer;
        z-index: 1000;
        transition: right 0.3s ease;
      }

      .toggle-sidebar.collapsed {
        right: 20px;
      }

      @media (max-width: 768px) {
        .call-controls {
          padding: 8px 16px;
          gap: 8px;
        }
        
        .control-button {
          width: 40px;
          height: 40px;
        }
        
        #video-grid {
          width: 100%;
        }
      }

      /* Additional subtle enhancements for light mode */
      ::selection {
        background-color: rgba(66, 133, 244, 0.2);
      }

      /* Subtle scrollbar styling */
      #video-grid::-webkit-scrollbar {
        width: 8px;
      }

      #video-grid::-webkit-scrollbar-track {
        background: var(--background-light);
      }

      #video-grid::-webkit-scrollbar-thumb {
        background-color: rgba(0, 0, 0, 0.2);
        border-radius: 4px;
      }

      #video-grid::-webkit-scrollbar-thumb:hover {
        background-color: rgba(0, 0, 0, 0.3);
      }


    // Set the ROOM_ID variable to the roomId that is passed in by server.js
    script.
      const ROOM_ID = '#{roomId}';
    // CDN in the peerJS and socket.io libraries
    script(defer, src='https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js')
    script(defer, src='/socket.io/socket.io.js')
    // Load in script.js, our client-side script
    script(defer, src='/javascripts/script.js')
  body
    .meeting-container
      .main-container
        .main-screen
          video#main-video
        .call-controls
          button#muteButton.control-button(onclick='toggleMute()')
            i.fas.fa-microphone
          button#cameraButton.control-button(onclick='toggleCamera()')
            i.fas.fa-video
          button#flipButton.control-button(onclick='toggleFlip()')
            i.fas.fa-sync
          button#screenShareButton.control-button(
            onclick='toggleScreenShare()'
          )
            i.fas.fa-desktop
          button.control-button.danger(onclick='endCall()')
            i.fas.fa-phone-slash
      button#toggleSidebar.toggle-sidebar(onclick='toggleSidebar()')
        i.fas.fa-chevron-left
      #video-grid
    
    script.
      function toggleSidebar() {
        const videoGrid = document.getElementById('video-grid');
        const toggleButton = document.getElementById('toggleSidebar');
        const icon = toggleButton.querySelector('i');
        
        videoGrid.classList.toggle('collapsed');
        toggleButton.classList.toggle('collapsed');
        
        if (videoGrid.classList.contains('collapsed')) {
          icon.classList.replace('fa-chevron-left', 'fa-chevron-right');
        } else {
          icon.classList.replace('fa-chevron-right', 'fa-chevron-left');
        }
      }
